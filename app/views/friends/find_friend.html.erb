<%#raise @user_pending.inspect%>
<div class="faq">
  <div class="container">
    <div class="row" style="margin-top:150px;">
      <div class="span12">
       <p>
          
       </p>
       <h4>Find Friend</h4>
        <%= form_tag :find_friend, :url => find_friend_path, :method => 'get' do%> 
            <td width="20%">
              <%= text_field_tag :fullname,"",:placeholder => "Enter Fullname" %>
            </td>
            <%= submit_tag "Submit",name: "findfriend",value: "Find",:class=>"search-btn"%>
        <%end%>

        <h1>Search Result</h1>

        <table width="100%" border="0" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th><%= "Name" %></th>
      <th><%= "Action" %></th>
    </tr>
  </thead>
  <%if @user_friends.present?%>
  <tbody>
    <% @user_friends.each do |user|%>
      <tr>
        <td><%= user.fullname rescue nil %></td>
        <td><%= link_to "View Profile", user_path(user.id)%></td>
        <td>
        <%unless current_user.friends_with?(user) == true%>
          <%= link_to "Friend Request", friend_request_path(:friend_id => user)%>
        <%else%>
          <%= link_to "Request Sent"%>
        <%end%> 
      </td>
      </tr>
    <% end %>
  </tbody>
  <%end%>
</table>
        <br />
      </div>
    </div>
  </div>
</div>