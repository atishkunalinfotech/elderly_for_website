<p id="notice"><%= notice %></p>

<h1>Group Memberships</h1>

<table>
  <thead>
    <tr>
      <th>Group</th>
      <th>User</th>
      <th>Group name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_memberships.each do |group_membership| %>
      <tr>
        <td><%= group_membership.group_id %></td>
        <td><%= group_membership.user_id %></td>
        <td><%= group_membership.group_name %></td>
        <td><%= link_to 'Show', group_membership %></td>
        <td><%= link_to 'Edit', edit_group_membership_path(group_membership) %></td>
        <td><%= link_to 'Destroy', group_membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

