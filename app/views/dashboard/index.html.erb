<section id="feature_slider" class="">
        <!-- 
            Each slide is composed by <img> and .info
            - .info's position is customized with css in index.css
            - each <img> parallax effect is declared by the following params inside its class:
            
            example: class="asset left-472 sp600 t120 z3"
            left-472 means left: -472px from the center
            sp600 is speed transition
            t120 is top to 120px
            z3 is z-index to 3
            Note: Maintain this order of params

            For the backgrounds, you can combine from the bgs folder :D
        -->
        <article class="slide" id="showcasing" style="background: url('/assets/slider.jpg') repeat-x top center;">
            
            <div class="info">
                <h2></h2>
            </div>
        </article>
        <article class="slide" id="ideas" style="background: url('/assets/slider1.jpg') repeat-x top center;">
            <div class="info">
                <h2></h2>
            </div>
           
        </article>
        <article class="slide" id="tour" style="background: url('/assets/slider2.jpg') repeat-x top center;">
            
            <div class="info">
                <h2></h2>
                
            </div>
        </article>
              
    </section>

    <div id="showcase">
        <div class="container">
            <div class="section_header">
                <h3>My Wall</h3>
            </div>            
            <div class="row feature_wrapper">
                <!-- Features Row -->
                <div class="features_op1_row">
                    <!-- Feature -->
                    <div class="span4 feature first">
                        <div class="img_box">
                          <%#raise @shares.inspect%>
                            <%@shares.each do |share|%>
                                
                                    <%if share.elder_gallary_id.present?%>
                                      <%@elder_gallary = ElderGallary.find(share.elder_gallary_id )%>
                                      <%@user = User.find(share.receiver_id )%>
                                      <%="Image Shared by #{@user.fullname}"%>
                                      <%= image_tag @elder_gallary.photo.url(:medium)%>
                                       <%if share.sender_id == current_user.id%>
                                         <strong><%= "Image shared"%></strong></br></br>
                                       <%else%>
                                         <strong><%= link_to 'share',update_share_path(:elder_photo => share.elder_gallary_id),method: 'post' %></strong></br></br>
                                       <%end%>
                                    <%else%>
                                      <%@elder_video = ElderVideo.find(share.elder_video_id )%>
                                      <%@user = User.find(share.sender_id )%>
                                      <%="Image Shared by #{@user.fullname}"%>
                                      <%= video_tag @elder_video.video.url(:medium),controls: true, style: "max-width: 100%;"%>
                                      <%if share.sender_id == current_user.id%>
                                         <strong><%= "Video shared"%></strong></br></br>
                                       <%else%>
                                         <strong><%= link_to 'share',update_share_video_path(:elder_video => share.elder_video_id),method: 'post' %></strong></br></br>
                                       <%end%>
                                    <%end%>
                                   
                                
                            <%end%>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
        </div>
    </div>

    

